<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <!-- Enable ASP.NET Core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- Define targets to write logs to -->
  <targets>
    <!-- File Target for all logs with basic details -->
    <target xsi:type="File" name="allfile" fileName="logs/llm-chat-api-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <!-- File Target for own logs with extra web details -->
    <target xsi:type="File" name="ownFile-web" fileName="logs/llm-chat-api-own-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}" />

    <!-- Console Target for hosting lifetime messages to improve Docker/console hosting -->
    <target xsi:type="Console" name="lifetimeConsole" layout="${MicrosoftConsoleLayout}" />

    <!-- Console Target for all logs -->
    <target xsi:type="Console" name="console"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <!-- File Target for errors and fatal errors -->
    <target xsi:type="File" name="errorFile" fileName="logs/llm-chat-api-error-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}|${stacktrace}" />

    <!-- File Target for chat-specific logs -->
    <target xsi:type="File" name="chatFile" fileName="logs/llm-chat-api-chat-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />
  </targets>

  <!-- Rules to map from logger name to target -->
  <rules>
    <!-- Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
    <logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="lifetimeConsole, ownFile-web" final="true" />
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <!-- Chat-specific logs -->
    <logger name="LLM.Chat.API.Controllers.*" minlevel="Trace" writeTo="chatFile" />
    <logger name="LLM.Chat.API.Services.*" minlevel="Trace" writeTo="chatFile" />

    <!-- Error logs -->
    <logger name="*" minlevel="Error" writeTo="errorFile" />

    <!-- All logs -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!-- Own logs -->
    <logger name="LLM.Chat.API.*" minlevel="Debug" writeTo="console,ownFile-web" />
  </rules>
</nlog>
